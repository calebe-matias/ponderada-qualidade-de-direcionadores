{
  "name": "ponderada-qualidade-de-direcionadores",
  "version": "1.0.0",
  "description": "Validacao de qualidade da API ASIS Tax Tech com Business Drivers como codigo.",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test:unit": "mocha \"tests/unit/**/*.spec.js\" --timeout 30000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=unit-report,html=true,json=true,quiet=true",
    "test:integration": "mocha \"tests/integration/**/*.spec.js\" --timeout 600000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=integration-report,html=true,json=true,quiet=true",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:load": "node tests/load/driver3-high-load.js"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "form-data": "^4.0.2"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "mocha": "^11.1.0",
    "mochawesome": "^7.1.3"
  }
}
